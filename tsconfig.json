{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"],
    "lib": ["ESNext"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
